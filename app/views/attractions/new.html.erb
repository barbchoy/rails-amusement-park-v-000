<h1>New Attraction/h1>
<p>Find me in app/views/attractions/new.html.erb</p>

<%=form_tag attractions_path do %>
  <label>Name:</label><br>
  <%= text_field_tag :'attraction[name]'%>

  <label>Height Requirement (in inches)</label><br>
  <%= text_field_tag :'attraction[min_height]'%>

  <label>How fun is it? (1-5 scale)</label><br>
  <%= text_field_tag :'attraction[happiness_rating]'%>

  <label>How nausea-inducing is it? (1-5 scale)</label><br>
  <%= text_field_tag :'attraction[nausea_rating]'%>

  <label>How many tickets does it cost?</label><br>
  <%= text_field_tag :'attraction[tickets]'%>

  <%= submit_tag "Create Attraction" %>

<% end %>
